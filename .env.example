# ===========================================
# Shock Trade - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# SPORTS DATA APIs
# ===========================================

# Football-Data.org - Soccer (Free, 10 req/min)
# Sign up at: https://www.football-data.org/client/register
FOOTBALL_DATA_API_KEY=your_football_data_key_here

# ESPN APIs - NFL, NBA, NHL, MLB (Free, no key needed)
# No configuration required

# ===========================================
# KALSHI DEMO API (Required)
# ===========================================
# Sign up at: https://demo.kalshi.com
# Get API keys from: Settings > API
KALSHI_API_KEY=your_kalshi_api_key_here
KALSHI_PRIVATE_KEY_PATH=kalshi_private_key.pem
KALSHI_BASE_URL=https://demo-api.kalshi.co

# ===========================================
# TRADING CONFIGURATION
# ===========================================
BANKROLL=10000
MAX_PER_TRADE_PCT=0.5
UNDERDOG_THRESHOLD=0.5
DAILY_LOSS_LIMIT=500
PER_MATCH_MAX_EXPOSURE=200
TAKE_PROFIT_PCT=0.15
STOP_LOSS_PCT=0.10

# ===========================================
# APPLICATION SETTINGS
# ===========================================
LOG_LEVEL=INFO
DATABASE_URL=sqlite+aiosqlite:///./goal_trader.db
GOAL_POLL_INTERVAL=30
